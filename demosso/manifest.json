{
  "manifest_version": 2,

  "name": "SSO Demo",
  "description": "Single sign on demo",
  "version": "1.0",

  "browser_action": {
    "default_icon": "smg.png",
    "default_title": "SSO Demo",
    "default_popup": "popup.html"
  },

  "icons": {
          "16": "smg.png",
          "48": "smg.png",
          "128": "smg.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "cookies",
    "webNavigation",
    "storage",
    "notifications",
    "alarms",
    "cookies"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://*/*"],
      "js": ["jquery-2.1.4.min.js", "injected.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self'  'unsafe-eval' https://ajax.googleapis.com; object-src 'self'",

  "web_accessible_resources": [
    "images/*"
  ]
}